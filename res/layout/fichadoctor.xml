<?xml version="1.0" encoding="utf-8"?>

 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@drawable/fondo_1" >
    
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    
    <!-- HEADER -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
         >

             <ImageView
    android:id="@+id/tv_header"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:layout_marginTop="0dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    
    android:gravity="center"
    android:orientation="vertical" />
        </RelativeLayout>
       
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginTop="-100dp"
         android:orientation="vertical">
        
        <TextView
            android:id="@+id/texttitulo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
           android:layout_marginLeft="20dp"           
            android:layout_marginTop="20dp"
            android:text="Dr. Francisco Navarrete Suarez"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_big"
            android:textStyle="bold" />
        
          </LinearLayout>
    
        
      
        
 
    <!-- BODY -->
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/navegacionder1"
            android:layout_width="38dp"
             android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/derecha" />

        <Button
            android:id="@+id/navegacionizq1"
            android:layout_width="38dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/izquierda" />
        
    </RelativeLayout>  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
       >

            
        <ImageView
        android:id="@+id/imageViewrisa"
        android:src="@drawable/barraganparrao_slide1"
        
       android:layout_width="wrap_content"
        android:layout_height="450dp"
     
    
        />
        
    </LinearLayout>

    <!-- LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
