<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:orientation="horizontal" >

     <ImageView
        android:id="@+id/thumbtel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
 
      <TextView android:id="@+id/LblTitulo" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" 
		android:paddingLeft="5dp"
		android:layout_toRightOf="@+id/thumbtel"
		
		android:textStyle="bold" 
		android:textSize="15sp" />
		
	<TextView android:id="@+id/Lbldetail" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/thumbtel"
		android:paddingLeft="5dp"
		 android:layout_marginTop="22dp" 
		android:textStyle="normal" 
		android:textSize="10sp" />
	
	<TextView android:id="@+id/lblLeerMas" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/thumbtel"
		android:paddingLeft="5dp"
		 android:layout_marginTop="60dp" 
		android:textStyle="normal" 
		android:text="Ver mÃ¡s"
		android:textSize="15sp" />
	
     <ImageButton 
         
         
          android:id="@+id/bottonubicacion"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/direccion"
        android:paddingLeft="5dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp" 
         />

   

   <ImageButton 
        android:id="@+id/bottontel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/bottonemail"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/telefono" />

    <ImageButton 
        android:id="@+id/bottonemail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/bottonubicacion"
        android:background="@drawable/mail"
        android:paddingLeft="5dp"
        android:paddingTop="20dp" />
 
</RelativeLayout>